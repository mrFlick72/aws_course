{
  "variables": {
    "BUCKET_FOLDER_KEY": "",
    "ami_version": "1.0.0",
    "ami_name": "ami-autoscaling-hello-world",
    "instance_size": "t3.small",
    "ssh_username": "ec2-user"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn-ami*-ebs",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "instance_type": "{{user `instance_size`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "20m",
      "ami_name": "{{user `ami_name`}}-v{{user `ami_version`}}",
      "ssh_pty": "true",
      "vpc_filter": {
        "filters": {
          "isDefault": "true"
        }
      },
      "subnet_filter": {
        "most_free": true,
        "random": true
      },
      "iam_instance_profile": "aws_course_role",
      "tags": {
        "Name": "Autoscaling Hello World",
        "scope": "aws_course",
        "version": "v{{user `ami_version`}}"
      }
    }
  ],
  "description": "Autoscaling Hello World image v{{user `ami_version`}}",
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh",
      "environment_vars": [
        "BUCKET_FOLDER_KEY={{user `BUCKET_FOLDER_KEY`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo {{ .Path }}"
    }
  ]
}
